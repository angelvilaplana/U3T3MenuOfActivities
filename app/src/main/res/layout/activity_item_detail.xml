<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ItemDetailActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/android_oreo" android:id="@+id/imageActivity"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/versionActivity"
            android:layout_marginStart="100dp" android:layout_marginEnd="100dp"
            app:layout_constraintVertical_bias="0.0"
            android:layout_marginBottom="25dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="100dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/versionActivity"
            android:text="Version: 8" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toTopOf="@+id/apiActivity"
            android:layout_marginBottom="10dp" android:textSize="18sp"/>
    <TextView
            android:text="API: 26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/apiActivity"
            app:layout_constraintStart_toStartOf="@+id/versionActivity" app:layout_constraintEnd_toEndOf="@+id/versionActivity"
            app:layout_constraintBottom_toTopOf="@+id/nameActivity" android:layout_marginBottom="20dp"
            android:textSize="18sp"/>
    <TextView
            android:text="Oreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameActivity"
            app:layout_constraintStart_toStartOf="@+id/versionActivity" app:layout_constraintEnd_toEndOf="@+id/versionActivity"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/yearActivity"
            android:layout_marginBottom="20dp" android:textSize="25sp" android:textColor="#2196F3"/>
    <TextView
            android:text="2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/yearActivity"
            app:layout_constraintStart_toStartOf="@+id/versionActivity" app:layout_constraintEnd_toEndOf="@+id/versionActivity"
            app:layout_constraintHorizontal_bias="0.515" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp" android:textSize="20sp" android:textColor="#FF5722"/>
</androidx.constraintlayout.widget.ConstraintLayout>