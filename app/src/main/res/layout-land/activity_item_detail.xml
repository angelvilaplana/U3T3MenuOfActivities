<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ItemDetailActivity">
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@mipmap/android_oreo" android:id="@+id/imageActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/guideline" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/versionActivity" android:layout_marginTop="60dp"
            android:layout_marginStart="100dp" android:layout_marginEnd="100dp" android:layout_marginBottom="20dp"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/versionActivity"
            android:text="Version: 8"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/imageActivity"
            app:layout_constraintEnd_toEndOf="@+id/imageActivity"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/apiActivity"
            android:layout_marginBottom="5dp"/>
    <TextView
            android:text="API: 26"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/apiActivity"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="@+id/imageActivity"
            app:layout_constraintEnd_toEndOf="@+id/imageActivity"
            app:layout_constraintHorizontal_bias="0.477" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="60dp"/>
    <TextView
            android:text="Oreo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/nameActivity"
            android:textSize="25sp" android:textColor="#2196F3"
            app:layout_constraintStart_toStartOf="@+id/yearActivity"
            app:layout_constraintEnd_toEndOf="@+id/yearActivity"
            app:layout_constraintTop_toBottomOf="@+id/yearActivity" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="120dp"/>
    <TextView
            android:text="2017"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/yearActivity"
            android:textSize="20sp" android:textColor="#FF5722"
            app:layout_constraintStart_toStartOf="@+id/guideline" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="120dp"/>
    <androidx.constraintlayout.widget.Guideline android:layout_width="wrap_content" android:layout_height="wrap_content"
                                                android:id="@+id/guideline"
                                                android:orientation="vertical"
                                                app:layout_constraintGuide_percent="0.5"/>
</androidx.constraintlayout.widget.ConstraintLayout>